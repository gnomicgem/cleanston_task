<turbo-frame id="form">
  <%= form_with url: orders_path, method: :post, scope: :order, data: { turbo_confirm: "Вы уверены?" } do |f| %>
    <%= f.hidden_field :cart_id, value: cart.id %>
    <%= f.hidden_field :applied_discount, value: local_assigns[:input_discount].presence %>
    <%= f.hidden_field :total_price, value: cart.calculate_total_price(local_assigns[:input_discount]) %>

    <%= f.submit "Оформить", class: "bg-primary-500 border-none w-full h-[40px] py-3 text-white text-lg font-semibold rounded-[8px]" %>
  <% end %>
</turbo-frame>